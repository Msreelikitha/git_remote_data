
class ToDoList:
    def __init__(self):
        self.tasks = {}

    def add_task(self):
        task_name = input("Enter task name: ")
        task_description = input("Enter task description: ")
        task_due_date = input("Enter task due date (YYYY-MM-DD): ")

        self.tasks[task_name] = {
            "description": task_description,
            "due_date": task_due_date,
            "status": "Pending"
        }

        print("Task added successfully!")

    def view_tasks(self):
        print("Tasks:")
        for task, details in self.tasks.items():
            print(f"Task: {task}")
            print(f"Description: {details['description']}")
            print(f"Due Date: {details['due_date']}")
            print(f"Status: {details['status']}\n")

    def update_task(self):
        task_name = input("Enter task name to update: ")
        if task_name in self.tasks:
            print("Update options:")
            print("1. Description")
            print("2. Due Date")
            print("3. Status")

            update_choice = input("Choose an option: ")

            if update_choice == "1":
                new_description = input("Enter new description: ")
                self.tasks[task_name]["description"] = new_description
            elif update_choice == "2":
                new_due_date = input("Enter new due date (YYYY-MM-DD): ")
                self.tasks[task_name]["due_date"] = new_due_date
            elif update_choice == "3":
                new_status = input("Enter new status (Pending/Done): ")
                self.tasks[task_name]["status"] = new_status
            else:
                print("Invalid option.")

            print("Task updated successfully!")
        else:
            print("Task not found.")

    def delete_task(self):
        task_name = input("Enter task name to delete: ")
        if task_name in self.tasks:
            del self.tasks[task_name]
            print("Task deleted successfully!")
        else:
            print("Task not found.")

def main():
    todo_list = ToDoList()

    while True:
        print("\nOptions:")
        print("1. Add Task")
        print("2. View Tasks")
        print("3. Update Task")
        print("4. Delete Task")
        print("5. Exit")

        choice = input("Choose an option: ")

        if choice == "1":
            todo_list.add_task()
        elif choice == "2":
            todo_list.view_tasks()
        elif choice == "3":
            todo_list.update_task()
        elif choice == "4":
            todo_list.delete_task()
        elif choice == "5":
            break
        else:
            print("Invalid option. Please try again.")

if __name__ == "__main__":
    main()



